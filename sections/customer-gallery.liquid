{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .customer-gallery__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .customer-gallery__heading {
    font-family: var(--font-heading-family);
    font-size: 2.25rem; /* text-4xl */
    font-weight: 700;
    margin-bottom: 1rem;
  }

  @media screen and (min-width: 750px) {
    .customer-gallery__heading {
      font-size: 3rem; /* text-5xl */
    }
  }

  .customer-gallery__heading-highlight {
    color: rgb(var(--color-button));
  }

  .customer-gallery__text {
    font-size: 1.125rem; /* text-lg */
    color: rgba(var(--color-foreground), 0.65);
    max-width: 42rem;
    margin: 0 auto;
  }

  .customer-gallery__grid {
    display: flex;
    overflow-x: auto;
    gap: 0;
    padding-bottom: 1rem;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none; /* Firefox */
    flex-wrap: nowrap; /* Ensure no wrapping */
  }
  
  .customer-gallery__grid::-webkit-scrollbar {
    display: none; /* Chrome/Safari */
  }

  .customer-gallery__item {
    flex: 0 0 {{ 100.0 | divided_by: section.settings.visible_items_mobile }}%;
    padding: 0 {{ section.settings.image_padding }}px;
    scroll-snap-align: start;
  }

  @media screen and (min-width: 750px) {
    .customer-gallery__item {
      flex: 0 0 {{ 100.0 | divided_by: section.settings.visible_items_desktop }}%;
    }
  }

  .customer-gallery__image-wrapper {
    aspect-ratio: 1 / 1;
    overflow: hidden;
    border-radius: var(--media-radius);
    background-color: rgba(var(--color-foreground), 0.1);
    cursor: pointer;
    width: 100%;
  }

  .customer-gallery__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .customer-gallery__image-wrapper:hover .customer-gallery__image {
    transform: scale(1.1);
  }
{%- endstyle -%}

<div class="customer-gallery section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="customer-gallery__header">
      <h2 class="customer-gallery__heading">
        {{ section.settings.heading_start }}
        <span class="customer-gallery__heading-highlight">{{ section.settings.heading_highlight }}</span>
      </h2>
      <p class="customer-gallery__text">
        {{ section.settings.text }}
      </p>
    </div>

    <div class="customer-gallery__grid">
      {%- for block in section.blocks -%}
        <div class="customer-gallery__item">
          <div class="customer-gallery__image-wrapper">
            {%- if block.settings.image != blank -%}
              {{ block.settings.image | image_url: width: 400 | image_tag: class: 'customer-gallery__image', loading: 'lazy' }}
            {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg customer-gallery__image' }}
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Customer Gallery",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading_start",
      "default": "Müşterilerimizin ",
      "label": "Heading Start"
    },
    {
      "type": "text",
      "id": "heading_highlight",
      "default": "Özel Anıları",
      "label": "Heading Highlight"
    },
    {
      "type": "textarea",
      "id": "text",
      "default": "Binlerce mutlu müşterimizin evlerini süsleyen özel tasarımlardan ilham alın",
      "label": "Text"
    },
    {
      "type": "header",
      "content": "Carousel Settings"
    },
    {
      "type": "range",
      "id": "visible_items_desktop",
      "min": 2,
      "max": 8,
      "step": 0.5,
      "label": "Visible Items (Desktop)",
      "default": 4.5
    },
    {
      "type": "range",
      "id": "visible_items_mobile",
      "min": 1,
      "max": 4,
      "step": 0.5,
      "label": "Visible Items (Mobile)",
      "default": 2.5
    },
    {
      "type": "range",
      "id": "image_padding",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Image Side Padding",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 64
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Customer Gallery",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
