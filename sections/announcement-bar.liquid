<style>
  /* Marquee Stilleri */
  .marquee-section {
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    padding: 12px 0;
    display: flex;
    align-items: center;
    line-height: 1;
    transition: opacity 0.3s;
  }
  .marquee-section:hover {
    opacity: 0.9;
  }
  .marquee-wrapper {
    display: flex;
    animation: marquee-scroll {{ section.settings.speed }}s linear infinite;
  }
  .marquee-content {
    flex-shrink: 0;
    display: flex;
    align-items: center;
  }
  @keyframes marquee-scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-100%); }
  }

  /* Modal Stilleri */
  .modal-overlay {
    display: none; /* BaÅŸlangÄ±Ã§ta gizli */
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7); /* Karartma */
    z-index: 9999;
    justify-content: center;
    align-items: center;
    backdrop-filter: blur(3px);
  }

  .modal-content {
    background-color: #121212; /* Koyu Tema */
    color: #ffffff;
    padding: 40px;
    border-radius: 10px;
    width: 90%;
    max-width: 500px;
    position: relative;
    text-align: center;
    box-shadow: 0 10px 25px rgba(0,0,0,0.5);
    border: 1px solid #333;
  }

  .close-btn {
    position: absolute;
    top: 15px;
    right: 20px;
    font-size: 20px;
    cursor: pointer;
    color: #aaa;
    transition: transform 0.2s;
  }
  .close-btn:hover { transform: scale(1.2); color: #fff; }

  .modal-title {
    font-size: 28px;
    margin-bottom: 15px;
    color: #fff;
    font-family: serif;
  }

  .modal-desc {
    font-size: 14px;
    color: #ccc;
    margin-bottom: 25px;
    line-height: 1.5;
  }

  .modal-input {
    width: 100%;
    padding: 12px;
    border: 1px solid {{ section.settings.accent_color }};
    background: transparent;
    color: #fff;
    border-radius: 5px;
    margin-bottom: 15px;
    font-size: 16px;
  }
  
  .modal-input:focus {
    outline: none;
    box-shadow: 0 0 5px {{ section.settings.accent_color }};
  }

  .btn-main {
    width: 100%;
    padding: 12px;
    background-color: {{ section.settings.accent_color }};
    color: #fff;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    font-weight: bold;
    cursor: pointer;
    transition: background 0.3s;
  }
  .btn-main:hover {
    filter: brightness(1.1);
  }

  .no-thanks {
    margin-top: 15px;
    font-size: 16px;
    color: #888;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 5px;
  }
  .no-thanks:hover { color: #fff; }
  
  .success-message h3 { color: {{ section.settings.accent_color }}; margin-bottom: 10px; }
  .error-message { color: #ff4444; margin-bottom: 10px; font-size: 12px; }

  /* Mouse Ã¼zerine gelince dursun */
  .marquee-section:hover .marquee-wrapper {
    animation-play-state: paused;
  }
  
</style>

<script>
  function openNewsletterModal() {
    document.getElementById('newsletter-modal').style.display = 'flex';
  }

  function closeNewsletterModal() {
    document.getElementById('newsletter-modal').style.display = 'none';
  }

  // DÄ±ÅŸarÄ± tÄ±klayÄ±nca kapatma
  window.onclick = function(event) {
    var modal = document.getElementById('newsletter-modal');
    if (event.target == modal) {
      modal.style.display = "none";
    }
  }

  // SAYFA YÃœKLENDÄ°ÄÄ°NDE Ã‡ALIÅACAK KOD
  document.addEventListener("DOMContentLoaded", function() {
    // KullanÄ±cÄ± daha Ã¶nce Ã¼ye olduysa kontrol et
    if (localStorage.getItem('is_subscribed') === 'true') {
        // EÄER ÃœYE OLMUÅSA: Ãœstteki kayan yazÄ±yÄ± tamamen yok et!
        var marqueeBar = document.getElementById('marquee-bar-container');
        if(marqueeBar) {
            marqueeBar.style.display = 'none';
        }
    }
  });
</script>