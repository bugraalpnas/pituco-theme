<section class="pituco-hero" style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};">
  <div class="pituco-hero-container">
    <div class="pituco-hero-content">
      <h1 class="pituco-hero-title">
        <span class="title-line1">{{ section.settings.title_line1 }}</span>
        <span class="title-line2" style="color: {{ section.settings.accent_color }};">{{ section.settings.title_line2 }}</span>
        <span class="title-line3">{{ section.settings.title_line3 }}</span>
      </h1>
      
      <p class="pituco-hero-description">{{ section.settings.description }}</p>
      
      <div class="pituco-hero-buttons">
        {% if section.settings.button1_text != blank %}
          <a href="{{ section.settings.button1_link }}" class="pituco-btn pituco-btn-outline">
            {{ section.settings.button1_text }}
          </a>
        {% endif %}
        {% if section.settings.button2_text != blank %}
          <a href="{{ section.settings.button2_link }}" class="pituco-btn pituco-btn-primary" style="background-color: {{ section.settings.accent_color }};">
            {{ section.settings.button2_text }}
          </a>
        {% endif %}
      </div>
      
      <div class="pituco-hero-features">
        {% if section.settings.feature1 != blank %}
          <span class="feature-item">{{ section.settings.feature1 }}</span>
        {% endif %}
        {% if section.settings.feature2 != blank %}
          <span class="feature-item">{{ section.settings.feature2 }}</span>
        {% endif %}
        {% if section.settings.feature3 != blank %}
          <span class="feature-item">{{ section.settings.feature3 }}</span>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  .pituco-hero {
    width: 100%;
    min-height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    position: relative;
  }

  .pituco-hero-container {
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
  }

  .pituco-hero-content {
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
  }

  .pituco-hero-title {
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
  }

  .title-line1,
  .title-line2,
  .title-line3 {
    display: block;
  }

  .title-line2 {
    font-style: italic;
    font-family: serif;
  }

  .pituco-hero-description {
    font-size: clamp(1rem, 2vw, 1.125rem);
    line-height: 1.6;
    margin-bottom: 2.5rem;
    color: rgba(255, 255, 255, 0.85);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .pituco-hero-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 3rem;
  }

  .pituco-btn {
    padding: 14px 32px;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-block;
    cursor: pointer;
  }

  .pituco-btn-outline {
    border: 2px solid #fff;
    color: #fff;
    background: transparent;
  }

  .pituco-btn-outline:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-2px);
  }

  .pituco-btn-primary {
    border: none;
    color: #fff;
  }

  .pituco-btn-primary:hover {
    filter: brightness(1.1);
    transform: translateY(-2px);
  }

  .pituco-hero-features {
    display: flex;
    gap: 2rem;
    justify-content: center;
    flex-wrap: wrap;
    font-size: 14px;
    color: rgba(255, 255, 255, 0.7);
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  @media screen and (max-width: 768px) {
    .pituco-hero {
      min-height: 500px;
      padding: 3rem 1.5rem;
    }

    .pituco-hero-buttons {
      flex-direction: column;
      align-items: stretch;
    }

    .pituco-btn {
      width: 100%;
      text-align: center;
    }

    .pituco-hero-features {
      flex-direction: column;
      gap: 0.8rem;
      align-items: center;
    }
  }
</style>
