{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .hero-custom {
    position: relative;
    text-align: center;
  }

  .hero-custom__container {
    max-width: 896px; /* max-w-4xl */
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .hero-custom__heading {
    font-family: var(--font-heading-family);
    font-weight: 700;
    letter-spacing: -0.025em; /* tracking-tight */
    line-height: 1.1;
    margin: 0;
    font-size: 3rem; /* text-5xl approx */
  }

  @media screen and (min-width: 750px) {
    .hero-custom__heading {
      font-size: 4.5rem; /* text-7xl approx */
    }
  }

  @media screen and (min-width: 990px) {
    .hero-custom__heading {
      font-size: 6rem; /* text-8xl approx */
    }
  }

  .hero-custom__heading-highlight {
    color: rgb(var(--color-button)); /* text-primary */
    font-style: italic;
  }

  .hero-custom__text {
    font-size: 1.25rem; /* text-xl */
    color: rgba(var(--color-foreground), 0.65); /* text-muted-foreground */
    max-width: 42rem; /* max-w-2xl */
    margin: 0 auto;
    line-height: 1.5;
  }

  @media screen and (min-width: 750px) {
    .hero-custom__text {
      font-size: 1.5rem; /* text-2xl */
    }
  }

  .hero-custom__buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
    align-items: center;
    padding-top: 1rem;
  }

  @media screen and (min-width: 640px) {
    .hero-custom__buttons {
      flex-direction: row;
    }
  }

  .hero-custom__button {
    height: 3.5rem; /* h-14 */
    padding: 0 2rem; /* px-8 */
    font-size: 1.125rem; /* text-lg */
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--buttons-radius);
    text-decoration: none;
    transition: opacity 0.2s;
    font-weight: 500;
    cursor: pointer;
    border: none;
  }

  .hero-custom__button:hover {
    opacity: 0.9;
  }

  .hero-custom__button--primary {
    background-color: rgb(var(--color-button));
    color: rgb(var(--color-button-text));
  }

  .hero-custom__button--secondary {
    background-color: rgb(var(--bright));
    color: rgb(var(--bright-foreground));
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05); /* shadow-lg */
  }

  .hero-custom__footer-text {
    font-size: 0.875rem; /* text-sm */
    color: rgba(var(--color-foreground), 0.65); /* text-muted-foreground */
    padding-top: 2rem;
  }
{%- endstyle -%}

<div class="hero-custom section-{{ section.id }}-padding">
  <div class="hero-custom__container">
    <div class="hero-custom__content">
      <h1 class="hero-custom__heading">
        {{ section.settings.heading_start }}
        <span class="hero-custom__heading-highlight">{{ section.settings.heading_highlight }}</span>
        {{ section.settings.heading_end }}
      </h1>
      <p class="hero-custom__text">
        {{ section.settings.text }}
      </p>
    </div>

    <div class="hero-custom__buttons">
      {%- if section.settings.button_label_1 != blank -%}
        <a href="{{ section.settings.button_link_1 }}" class="hero-custom__button hero-custom__button--secondary">
          {{ section.settings.button_label_1 }}
        </a>
      {%- endif -%}
      {%- if section.settings.button_label_2 != blank -%}
        <a href="{{ section.settings.button_link_2 }}" class="hero-custom__button hero-custom__button--primary">
          {{ section.settings.button_label_2 }}
        </a>
      {%- endif -%}
    </div>

    <div class="hero-custom__footer-text">
      {{ section.settings.footer_text }}
    </div>
  </div>
</div>

