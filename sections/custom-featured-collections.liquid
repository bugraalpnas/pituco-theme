{% schema %}
{
  "name": "Custom Collections",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "collection_block",
      "name": "Collection Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Collection Title",
          "default": "Collection Name"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Collection Link"
        },
        {
          "type": "color",
          "id": "overlay_color",
          "label": "Overlay Color",
          "default": "#000000"
        },
        {
          "type": "range",
          "id": "overlay_opacity",
          "min": 0,
          "max": 100,
          "step": 5,
          "unit": "%",
          "label": "Overlay Opacity",
          "default": 50
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#FFFFFF"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Featured Collections",
      "blocks": [
        {
          "type": "collection_block"
        },
        {
          "type": "collection_block"
        },
        {
          "type": "collection_block"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  .custom-featured-collections-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
    width: 100%;
  }

  .custom-featured-collections-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    width: 100%;
  }

  .collection-card {
    position: relative;
    width: 100%;
    /* Aspect ratio can be enforced or depend on content. 
       Let's enforce a reasonable height or aspect ratio if image is missing, 
       but usually we want the image to dictate or a fixed height. 
       Let's use a padding-bottom hack or aspect-ratio property for consistency. */
    aspect-ratio: 1 / 1; 
    overflow: hidden;
    border-radius: 8px; /* Optional rounded corners */
    text-decoration: none;
    display: block;
  }
  
  .collection-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .collection-card__placeholder {
    width: 100%;
    height: 100%;
    background-color: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #888;
  }

  .collection-card__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    transition: opacity 0.3s ease;
    z-index: 1;
  }

  .collection-card__content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    text-align: center;
    width: 90%;
    pointer-events: none; /* Let clicks pass through to the link */
  }

  .collection-card__title {
    margin: 0;
    font-size: 1.5rem;
    font-weight: bold;
    /* Text color is handled inline */
  }

  /* Hover State */
  .collection-card:hover .collection-card__overlay {
    opacity: 0 !important; /* Override inline style on hover */
  }

  @media screen and (max-width: 749px) {
    .custom-featured-collections-grid {
      grid-template-columns: 1fr; /* Stack on mobile */
    }
    
    .collection-card {
        aspect-ratio: 16/9; /* More landscape on mobile maybe? Or keep square. Let's keep square or 4/3 */
        aspect-ratio: 4/3;
    }
  }
</style>

<div class="custom-featured-collections-wrapper section-{{ section.id }}-padding" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="custom-featured-collections-grid">
    {%- for block in section.blocks -%}
      <a href="{{ block.settings.link | default: '#' }}" class="collection-card" {{ block.shopify_attributes }}>
        {%- if block.settings.image != blank -%}
          {{ block.settings.image | image_url: width: 600 | image_tag: loading: 'lazy', alt: block.settings.title }}
        {%- else -%}
          <div class="collection-card__placeholder">
            {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {%- endif -%}

        <div class="collection-card__overlay" style="background-color: {{ block.settings.overlay_color }}; opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};"></div>

        <div class="collection-card__content">
          <h3 class="collection-card__title" style="color: {{ block.settings.text_color }}">{{ block.settings.title }}</h3>
        </div>
      </a>
    {%- endfor -%}
  </div>
</div>
