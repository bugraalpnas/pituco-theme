{% schema %}
{
  "name": "Pituco Hero 2",
  "settings": [
    {
      "type": "header",
      "content": "Hero Content"
    },
    {
      "type": "text",
      "id": "title_line1",
      "label": "Title Line 1",
      "default": "Stilinizi"
    },
    {
      "type": "text",
      "id": "title_line2",
      "label": "Title Line 2 (Pink)",
      "default": "Duvar Sanatına"
    },
    {
      "type": "text",
      "id": "title_line3",
      "label": "Title Line 3",
      "default": "Dönüştürün"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Fotoğraflarınızla, metinlerinizle ve tarzınızla kişiselleştirilmiş posterler yaratın. Premium kalitede baskılar, kapınıza kadar teslim."
    },
    {
      "type": "text",
      "id": "button1_text",
      "label": "Button 1 Text",
      "default": "Kendi Posterini Oluştur"
    },
    {
      "type": "url",
      "id": "button1_link",
      "label": "Button 1 Link"
    },
    {
      "type": "text",
      "id": "button2_text",
      "label": "Button 2 Text",
      "default": "Alışverişe Başla"
    },
    {
      "type": "url",
      "id": "button2_link",
      "label": "Button 2 Link",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Media"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "video",
      "id": "video_1",
      "label": "Vertical Video",
      "info": "Upload a vertical video for the center slot."
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#f5f5f5"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent Color (Pink)",
      "default": "#D84575"
    }
  ],
  "presets": [
    {
      "name": "Pituco Hero 2"
    }
  ]
}
{% endschema %}

<section class="pituco-hero-2" style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};">
  <div class="pituco-hero-container">
    
    <!-- Text Content -->
    <div class="pituco-hero-content">
      <h1 class="pituco-hero-title">
        <span class="title-line1">{{ section.settings.title_line1 }}</span>
        <span class="title-line2" style="color: {{ section.settings.accent_color }};">{{ section.settings.title_line2 }}</span>
        <span class="title-line3">{{ section.settings.title_line3 }}</span>
      </h1>
      
      <p class="pituco-hero-description">{{ section.settings.description }}</p>
      
      <div class="pituco-hero-buttons">
        {% if section.settings.button1_text != blank %}
          <a href="{{ section.settings.button1_link }}" class="pituco-btn pituco-btn-outline" style="border-color: {{ section.settings.text_color }}; color: {{ section.settings.text_color }};">
            {{ section.settings.button1_text }}
          </a>
        {% endif %}
        {% if section.settings.button2_text != blank %}
          <a href="{{ section.settings.button2_link }}" class="pituco-btn pituco-btn-primary" style="background-color: {{ section.settings.accent_color }};">
            {{ section.settings.button2_text }}
          </a>
        {% endif %}
      </div>
    </div>

    <!-- Media Content -->
    <div class="pituco-hero-media">
      <div class="media-item image-item">
        {% if section.settings.image_1 != blank %}
          {{ section.settings.image_1 | image_url: width: 600 | image_tag: loading: 'lazy', class: 'hero-media-img' }}
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>

      <div class="media-item video-item">
        {% if section.settings.video_1 != blank %}
          {{ section.settings.video_1 | video_tag: autoplay: true, loop: true, muted: true, controls: false, class: 'hero-media-video' }}
        {% else %}
          <div class="placeholder-video">
            {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>

      <div class="media-item image-item">
        {% if section.settings.image_2 != blank %}
          {{ section.settings.image_2 | image_url: width: 600 | image_tag: loading: 'lazy', class: 'hero-media-img' }}
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
    </div>

  </div>
</section>

<style>
  .pituco-hero-2 {
    width: 100%;
    padding: 2rem 1rem;
    position: relative;
    overflow: hidden;
    padding-bottom: 80px; /* Space for sticky buttons on mobile */
    min-height: 85vh; /* Increase section height */
    display: flex;
    align-items: center;
  }

  @media screen and (min-width: 768px) {
    .pituco-hero-2 {
      padding: 4rem 2rem;
      padding-bottom: 4rem;
      min-height: 90vh; /* Taller on desktop */
    }
  }

  .pituco-hero-container {
    width: 100%;
    max-width: 1600px;
    margin: 0 auto;
    display: grid;
    gap: 2rem;
    height: 100%;
  }

  /* ... (skip unchanged) ... */

  .media-item {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    width: 100%;
    height: auto; /* Allow height to be determined by aspect ratio */
  }
  
  .media-item.image-item:first-of-type {
     aspect-ratio: 1/1; /* Square for first image on mobile */
  }
  
  .media-item.video-item {
     aspect-ratio: 9/16 !important; /* Enforce Vertical video aspect ratio */
     height: auto;
  }
  
  .media-item.image-item:last-of-type {
     aspect-ratio: 16/9; /* Landscape for bottom image */
  }

  @media screen and (min-width: 1024px) {
      .media-item {
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        aspect-ratio: 3/4;
      }
      
      .video-item {
         aspect-ratio: 9/16 !important;
         height: auto;
      }
      
      .media-item.image-item:first-of-type,
      .media-item.image-item:last-of-type {
         aspect-ratio: 3/4;
      }
  }

  .hero-media-img,
  .hero-media-video,
  .placeholder-svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  
  .placeholder-video {
    width: 100%;
    height: 100%;
    background: #e0e0e0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Mobile adjustments (just for specific mobile overrides if needed) */
  @media screen and (max-width: 767px) {
     /* Any specific mobile-only styles can go here, but sticky logic is now shared */
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    if (window.innerWidth < 1024) {
      const buttons = document.querySelector('.pituco-hero-buttons');
      const footer = document.querySelector('footer') || document.querySelector('.section-footer') || document.querySelector('#shopify-section-footer');
      const menuDrawer = document.querySelector('#Details-menu-drawer-container');
      
      if (buttons) {
        // Scroll logic
        if (footer) {
          window.addEventListener('scroll', () => {
            const footerRect = footer.getBoundingClientRect();
            if (footerRect.top < window.innerHeight) {
              buttons.classList.add('hidden-sticky');
            } else {
              // Only remove hidden-sticky if menu is NOT open
              if (!menuDrawer || !menuDrawer.hasAttribute('open')) {
                buttons.classList.remove('hidden-sticky');
              }
            }
          });
        }

        // Menu toggle logic
        if (menuDrawer) {
          const observer = new MutationObserver((mutations) => {
            mutations.forEach((mutation) => {
              if (mutation.type === 'attributes' && mutation.attributeName === 'open') {
                if (menuDrawer.hasAttribute('open')) {
                  buttons.style.display = 'none';
                } else {
                  buttons.style.display = 'flex';
                }
              }
            });
          });
          
          observer.observe(menuDrawer, { attributes: true });
        }
      }
    }
  });
</script>
