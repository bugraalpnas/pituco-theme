{% schema %}
{
  "name": "Pituco Hero 2",
  "settings": [
    {
      "type": "header",
      "content": "Hero Content"
    },
    {
      "type": "text",
      "id": "title_line1",
      "label": "Title Line 1",
      "default": "Stilinizi"
    },
    {
      "type": "text",
      "id": "title_line2",
      "label": "Title Line 2 (Pink)",
      "default": "Duvar Sanatına"
    },
    {
      "type": "text",
      "id": "title_line3",
      "label": "Title Line 3",
      "default": "Dönüştürün"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Fotoğraflarınızla, metinlerinizle ve tarzınızla kişiselleştirilmiş posterler yaratın. Premium kalitede baskılar, kapınıza kadar teslim."
    },
    {
      "type": "text",
      "id": "button1_text",
      "label": "Button 1 Text",
      "default": "Kendi Posterini Oluştur"
    },
    {
      "type": "url",
      "id": "button1_link",
      "label": "Button 1 Link"
    },
    {
      "type": "text",
      "id": "button2_text",
      "label": "Button 2 Text",
      "default": "Alışverişe Başla"
    },
    {
      "type": "url",
      "id": "button2_link",
      "label": "Button 2 Link",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Media"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "video",
      "id": "video_1",
      "label": "Vertical Video",
      "info": "Upload a vertical video for the center slot."
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#f5f5f5"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent Color (Pink)",
      "default": "#D84575"
    }
  ],
  "presets": [
    {
      "name": "Pituco Hero 2"
    }
  ]
}
{% endschema %}

<section class="pituco-hero-2" style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};">
  <div class="pituco-hero-container">
    
    <!-- Text Content -->
    <div class="pituco-hero-content">
      <h1 class="pituco-hero-title">
        <span class="title-line1">{{ section.settings.title_line1 }}</span>
        <span class="title-line2" style="color: {{ section.settings.accent_color }};">{{ section.settings.title_line2 }}</span>
        <span class="title-line3">{{ section.settings.title_line3 }}</span>
      </h1>
      
      <p class="pituco-hero-description">{{ section.settings.description }}</p>
      
      <div class="pituco-hero-buttons">
        {% if section.settings.button1_text != blank %}
          <a href="{{ section.settings.button1_link }}" class="pituco-btn pituco-btn-outline" style="border-color: {{ section.settings.text_color }}; color: {{ section.settings.text_color }};">
            {{ section.settings.button1_text }}
          </a>
        {% endif %}
        {% if section.settings.button2_text != blank %}
          <a href="{{ section.settings.button2_link }}" class="pituco-btn pituco-btn-primary" style="background-color: {{ section.settings.accent_color }};">
            {{ section.settings.button2_text }}
          </a>
        {% endif %}
      </div>
    </div>

    <!-- Media Content -->
    <div class="pituco-hero-media">
      <div class="media-item image-item">
        {% if section.settings.image_1 != blank %}
          {{ section.settings.image_1 | image_url: width: 600 | image_tag: loading: 'lazy', class: 'hero-media-img' }}
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>

      <div class="media-item video-item">
        {% if section.settings.video_1 != blank %}
          {{ section.settings.video_1 | video_tag: autoplay: true, loop: true, muted: true, controls: false, class: 'hero-media-video' }}
        {% else %}
          <div class="placeholder-video">
            {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>

      <div class="media-item image-item">
        {% if section.settings.image_2 != blank %}
          {{ section.settings.image_2 | image_url: width: 600 | image_tag: loading: 'lazy', class: 'hero-media-img' }}
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
    </div>

  </div>
</section>

<style>
  .pituco-hero-2 {
    width: 100%;
    padding: 2rem 1rem;
    position: relative;
    overflow: hidden;
    padding-bottom: 80px; /* Space for sticky buttons on mobile */
  }

  @media screen and (min-width: 768px) {
    .pituco-hero-2 {
      padding: 4rem 2rem;
      padding-bottom: 4rem;
    }
  }

  .pituco-hero-container {
    width: 100%;
    max-width: 1600px;
    margin: 0 auto;
    display: grid;
    gap: 2rem;
  }

  /* Mobile Layout (Default) */
  .pituco-hero-container {
    grid-template-columns: 1fr 1fr;
    grid-template-areas: 
      "img1 video"
      "text text"
      "img2 img2";
  }

  .pituco-hero-content {
    grid-area: text;
    text-align: center;
    width: 100%;
  }

  .pituco-hero-media {
    display: contents; /* Allow children to participate in parent grid */
  }

  .media-item.image-item:first-of-type {
    grid-area: img1;
  }

  .media-item.video-item {
    grid-area: video;
  }

  .media-item.image-item:last-of-type {
    grid-area: img2;
  }

  /* Desktop Layout: Side by Side */
  @media screen and (min-width: 1024px) {
    .pituco-hero-container {
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      gap: 4rem;
      padding: 0 2rem;
    }

    .pituco-hero-content {
      text-align: left;
      max-width: 50%;
      margin: 0;
      flex: 1;
    }

    .pituco-hero-media {
      display: grid;
      flex: 1;
      max-width: 50%;
      grid-template-columns: 1fr 1.2fr 1fr;
      gap: 1rem;
      align-items: center;
    }
    
    .media-item.image-item:first-of-type,
    .media-item.video-item,
    .media-item.image-item:last-of-type {
      grid-area: auto; /* Reset grid areas */
    }
    
    .pituco-hero-buttons {
      justify-content: flex-start;
      position: static;
      padding: 0;
      background: none;
      box-shadow: none;
    }
  }

  /* Title Styles */
  .pituco-hero-title {
    font-family: serif; 
    font-weight: 700;
    letter-spacing: -0.025em;
    line-height: 1.1;
    margin-bottom: 1rem;
    font-size: 2.5rem;
  }

  @media screen and (min-width: 768px) {
    .pituco-hero-title {
      font-size: 4.5rem;
      margin-bottom: 1.5rem;
    }
  }

  @media screen and (min-width: 1024px) {
    .pituco-hero-title {
      font-size: 5rem;
    }
  }

  .title-line1, .title-line2, .title-line3 {
    display: inline-block;
    margin: 0 4px;
  }
  
  /* Remove margin from first line if left aligned */
  @media screen and (min-width: 1024px) {
    .title-line1 { margin-left: 0; }
  }

  .title-line2 {
    font-style: italic;
  }

  /* Description Styles */
  .pituco-hero-description {
    font-size: 1rem;
    line-height: 1.5;
    margin-bottom: 1.5rem;
    opacity: 0.8;
  }

  @media screen and (min-width: 768px) {
    .pituco-hero-description {
      font-size: 1.25rem;
      margin-bottom: 2rem;
    }
  }

  /* Buttons */
  .pituco-hero-buttons {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    flex-wrap: wrap;
    
    /* Sticky on Mobile */
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background: white;
    padding: 1rem;
    z-index: 100;
    box-shadow: 0 -4px 10px rgba(0,0,0,0.1);
  }

  .pituco-btn {
    padding: 12px 20px;
    border-radius: 50px; /* Rounded pill shape */
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    flex: 1; /* Full width on mobile */
    white-space: nowrap;
  }
  
  @media screen and (min-width: 768px) {
    .pituco-btn {
        flex: initial;
        padding: 14px 28px;
        font-size: 1rem;
    }
  }

  .pituco-btn-outline {
    background-color: transparent;
    border: 2px solid currentColor;
  }

  .pituco-btn-outline:hover {
    opacity: 0.7;
  }

  .pituco-btn-primary {
    border: none;
    color: #fff;
  }

  .pituco-btn-primary:hover {
    filter: brightness(1.1);
    transform: translateY(-2px);
  }

  .media-item {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    width: 100%;
    height: 100%;
  }
  
  .media-item.image-item:first-of-type {
     aspect-ratio: 1/1; /* Square for first image on mobile */
  }
  
  .media-item.video-item {
     aspect-ratio: 1/1; /* Square for video on mobile to match */
  }
  
  .media-item.image-item:last-of-type {
     aspect-ratio: 16/9; /* Landscape for bottom image */
  }

  @media screen and (min-width: 1024px) {
      .media-item {
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        aspect-ratio: 3/4;
      }
      
      .video-item {
         aspect-ratio: 9/16;
      }
      
      .media-item.image-item:first-of-type,
      .media-item.image-item:last-of-type {
         aspect-ratio: 3/4;
      }
  }

  .hero-media-img,
  .hero-media-video,
  .placeholder-svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  
  .placeholder-video {
    width: 100%;
    height: 100%;
    background: #e0e0e0;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  /* Mobile adjustments */
  @media screen and (max-width: 767px) {
    .pituco-hero-buttons {
        transition: transform 0.3s ease;
    }
    
    .pituco-hero-buttons.hidden-sticky {
        transform: translateY(100%);
    }

    /* Button 1 White Style on Mobile */
    .pituco-btn-outline {
        border-color: #ffffff !important;
        color: #ffffff !important;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    if (window.innerWidth < 768) {
      const buttons = document.querySelector('.pituco-hero-buttons');
      const footer = document.querySelector('footer') || document.querySelector('.section-footer') || document.querySelector('#shopify-section-footer');
      
      if (buttons && footer) {
        window.addEventListener('scroll', () => {
          const footerRect = footer.getBoundingClientRect();
          // If footer top is visible in viewport (or close to it)
          if (footerRect.top < window.innerHeight) {
            buttons.classList.add('hidden-sticky');
          } else {
            buttons.classList.remove('hidden-sticky');
          }
        });
      }
    }
  });
</script>
