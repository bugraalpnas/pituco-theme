    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const scrollContainer = document.getElementById('HeaderMenuScrollContainer');
        const leftArrow = document.querySelector('.header__menu-arrow--left');
        const rightArrow = document.querySelector('.header__menu-arrow--right');

        if (!scrollContainer || !leftArrow || !rightArrow) return;

        function checkOverflow() {
          const scrollWidth = scrollContainer.scrollWidth;
          const clientWidth = scrollContainer.clientWidth;
          const scrollLeft = scrollContainer.scrollLeft;

          // Check if content fits entirely
          if (scrollWidth <= clientWidth) {
            leftArrow.classList.remove('visible');
            rightArrow.classList.remove('visible');
            return;
          }

          // Left Arrow Logic
          if (scrollLeft > 0) {
            leftArrow.classList.add('visible');
          } else {
            leftArrow.classList.remove('visible');
          }

          // Right Arrow Logic
          if (scrollLeft + clientWidth >= scrollWidth - 1) { // -1 tolerance for sub-pixel rounding
            rightArrow.classList.remove('visible');
          } else {
            rightArrow.classList.add('visible');
          }
        }

        // Initial check
        checkOverflow();

        // Event Listeners
        scrollContainer.addEventListener('scroll', checkOverflow);
        window.addEventListener('resize', checkOverflow);

        leftArrow.addEventListener('click', function() {
          scrollContainer.scrollBy({ left: -200, behavior: 'smooth' });
        });

        rightArrow.addEventListener('click', function() {
          scrollContainer.scrollBy({ left: 200, behavior: 'smooth' });
        });
        
        // Check again after a short delay to ensure fonts/layout loaded
        setTimeout(checkOverflow, 500);
      });
    </script>

