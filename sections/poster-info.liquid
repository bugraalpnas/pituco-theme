{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .poster-info {
    background-color: rgba(var(--color-foreground), 0.04); /* bg-card/50 approx */
  }

  .poster-info__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .poster-info__heading {
    font-family: var(--font-heading-family);
    font-size: 2.25rem; /* text-4xl */
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .poster-info__text {
    font-size: 1.125rem; /* text-lg */
    color: rgba(var(--color-foreground), 0.65);
    max-width: 42rem;
    margin: 0 auto;
  }

  .poster-info__grid-images {
    display: grid;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  @media screen and (min-width: 750px) {
    .poster-info__grid-images {
      grid-template-columns: repeat(3, 1fr);
    }
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .poster-info__feature-title {
    font-size: 1.25rem; /* text-xl */
    font-weight: 600;
    margin-bottom: 0.5rem;
    margin-top: 0;
  }

  .poster-info__feature-text {
    color: rgba(var(--color-foreground), 0.65);
    margin: 0;
  }

  .poster-info__grid-checks {
    display: grid;
    gap: 2rem;
    max-width: 100%; /* Allow full width */
    margin: 0 auto;
  }

  @media screen and (min-width: 750px) {
    .poster-info__grid-checks {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (min-width: 990px) {
    .poster-info__grid-checks {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .poster-info__check-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }

  .poster-info__check-icon {
    color: rgb(var(--color-button));
    flex-shrink: 0;
    margin-top: 0.25rem;
    width: 2rem; /* Increased size */
    height: 2rem; /* Increased size */
  }

  .poster-info__check-title {
    font-weight: 700;
    font-size: 1.25rem; /* Increased to 20px */
    margin-bottom: 0.5rem;
    display: block;
  }

  .poster-info__check-text {
    font-size: 1rem; /* Increased to 16px */
    color: rgba(var(--color-foreground), 0.75);
    margin: 0;
    line-height: 1.5;
  }
{%- endstyle -%}

<div class="poster-info section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="poster-info__header">
      <h2 class="poster-info__heading">{{ section.settings.heading }}</h2>
      <p class="poster-info__text">{{ section.settings.text }}</p>
    </div>

    <div class="poster-info__grid-images">
      {%- for block in section.blocks -%}
        {%- if block.type == 'feature_image' -%}
          <div class="poster-info__feature">
            <div class="poster-info__feature-image-wrapper">
              {%- if block.settings.image != blank -%}
                {{ block.settings.image | image_url: width: 500 | image_tag: class: 'poster-info__feature-image', loading: 'lazy' }}
              {%- else -%}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg poster-info__feature-image' }}
              {%- endif -%}
            </div>
            <h3 class="poster-info__feature-title">{{ block.settings.title }}</h3>
            <p class="poster-info__feature-text">{{ block.settings.text }}</p>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>

    <div class="poster-info__grid-checks">
      {%- for block in section.blocks -%}
        {%- if block.type == 'feature_check' -%}
            {%- render 'poster-info-check-item', block: block -%}
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Poster Info",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
