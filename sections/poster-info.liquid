{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .poster-info {
    background-color: rgba(var(--color-foreground), 0.04); /* bg-card/50 approx */
  }

  .poster-info__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .poster-info__heading {
    font-family: var(--font-heading-family);
    font-size: {{ section.settings.heading_size }}px;
    color: {{ section.settings.heading_color }};
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .poster-info__text {
    font-size: {{ section.settings.text_size }}px;
    color: {{ section.settings.text_color }};
    max-width: 42rem;
    margin: 0 auto;
  }

  .poster-info__grid-images {
    display: grid;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  @media screen and (min-width: 750px) {
    .poster-info__grid-images {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .poster-info__feature {
    text-align: center;
  }

  .poster-info__feature-image-wrapper {
    margin: 0 auto;
    max-width: 100%;
  }

  .poster-info__feature-image {
    max-width: 100%;
    height: auto;
  }

  .poster-info__feature-title {
    font-size: {{ section.settings.feature_title_size }}px;
    color: {{ section.settings.feature_title_color }};
    font-weight: 600;
    margin-bottom: 0.5rem;
    margin-top: 1rem;
  }

  .poster-info__feature-text {
    font-size: {{ section.settings.feature_text_size }}px;
    color: {{ section.settings.feature_text_color }};
  }

  .poster-info__grid-checks {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem;
  }

  .poster-info__check-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    flex: 1 1 300px; /* Grow, shrink, base width */
    max-width: 400px;
    padding: 0 1rem;
  }

  .poster-info__check-icon {
    color: {{ section.settings.check_icon_color }};
    flex-shrink: 0;
    margin-top: 0.25rem;
    width: 2rem;
    height: 2rem;
  }

  .poster-info__check-title {
    font-weight: 700;
    font-size: {{ section.settings.check_title_size }}px;
    color: {{ section.settings.check_title_color }};
    margin-bottom: 0.5rem;
    display: block;
  }

  .poster-info__check-text {
    font-size: {{ section.settings.check_text_size }}px;
    color: {{ section.settings.check_text_color }};
    margin: 0;
    line-height: 1.5;
  }
{%- endstyle -%}

<div class="poster-info section-{{ section.id }}-padding">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="poster-info__header">
      <h2 class="poster-info__heading">{{ section.settings.heading }}</h2>
      <p class="poster-info__text">{{ section.settings.text }}</p>
    </div>

    <div class="poster-info__grid-images">
      {%- for block in section.blocks -%}
        {%- if block.type == 'feature_image' -%}
          <div class="poster-info__feature">
            <div class="poster-info__feature-image-wrapper">
              {%- if block.settings.image != blank -%}
                {{ block.settings.image | image_url: width: 500 | image_tag: class: 'poster-info__feature-image', loading: 'lazy' }}
              {%- else -%}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg poster-info__feature-image' }}
              {%- endif -%}
            </div>
            <h3 class="poster-info__feature-title">{{ block.settings.title }}</h3>
            <p class="poster-info__feature-text">{{ block.settings.text }}</p>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>

    <div class="poster-info__grid-checks">
      {%- for block in section.blocks -%}
        {%- if block.type == 'feature_check' -%}
            {%- render 'poster-info-check-item', block: block -%}
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</div>

